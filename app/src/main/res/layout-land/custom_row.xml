<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/imagelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circle"
            android:id="@+id/resultImage"
            />


        <TextView
            android:id="@+id/resulttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"

            android:layout_marginBottom="26dp"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_alignBottom="@+id/resultImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/resultImage"
            android:layout_alignEnd="@+id/resultImage" />

        <TextView

            android:textSize="25sp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/resultImage"
            android:layout_alignStart="@+id/textView"
            android:id="@+id/contactNumberView"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:hint="Hammad Arif"
            android:layout_marginLeft="38dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/resultImage" />


    </RelativeLayout>


</LinearLayout>

